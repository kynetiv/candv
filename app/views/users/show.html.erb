<% content_for :title do %>Display User<% end %>

<div class="hero-unit">
	<h2>User Details</h2>
</div>
<div class="container">
	<div class="well">
		<% flash.each do |key, value| %>
		<div class="alert alert-<%= key %>"><h3><%= value %></h3></div>		
		<% end %>
		<table class="table table-striped table-bordered">
			<thead>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Email</th>
			</thead>
			<tr>
				<td><%= @user.first_name %></td>
				<td><%= @user.last_name %></td>
				<td><%= @user.email_address %></td>
			</tr>
		</table>
	</div>
</div>
