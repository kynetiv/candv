<% content_for :title do %>Display All Users<% end %>

<div class="hero-unit">
	<h2>Welcome!</h2>
</div>
<div class="container">
	<div class="well">
		<% flash.each do |key, value| %>
		<div class="alert alert-<%= key %>"><h3><%= value %></h3></div>		
		<% end %>
		<table class="table table-striped table-bordered">
			<thead><th>User Name</th></thead>
			<% @users.each do |user| %>
			<tr>
				<td><%= link_to(user.first_name + " " + user.last_name, user_path(user.id) )%></td><% end %>
			</tr>
		</table>
	</div>
</div>
