<% content_for :title do %>Product Listing<% end %>
<div class="hero-unit">
	<h3>Products</h3>
</div>
	<div class="well">
		<% flash.each do |key, value| %>
		<div class="alert alert-<%= key %>"><h3><%= value %></h3></div>		
		<% end %>
		<table class="table table-striped table-bordered">
			<thead>
				<th>ID</td>
				<th>Product Name</th>
				<th>Product Description</th>
			</thead>
			<% @products.each do |product| %>
			<tr>
				<td><%= product.id %></td>
				<td><%= link_to(product.name, product_path(product.id) ) %></td>
				<td><%= product.description %></td>
			</tr>
			<% end %>
		</table>
	</div>
</div>